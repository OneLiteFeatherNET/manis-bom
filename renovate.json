{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackageNames": [
        "eu.cloudnetservice.cloudnet:bom"
      ],
      "allowedVersions": "<=4.0.0-RC16"
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "automerge": true
  }
}
